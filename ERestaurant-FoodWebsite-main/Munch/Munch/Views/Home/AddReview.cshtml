@model Munch.Models.AddReview
@{
    ViewData["Title"] = "AddReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        <h2 class="section-title ff-secondary text-center text-primary fw-normal">Track Expense</h2>
    </div>

<form asp-controller="Home" asp-action="AddReview" method="post" class="apply-form">
    <div class="form-group">
        <label asp-for="UserName" class="form-label">Your Name:</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="form-label">Comment:</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="form-label">Rating (1-5):</label>
        <input asp-for="Rating" type="number" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</center>

<style>
    /* Form Styles */
    .apply-form {
        font-size: 16px;
        margin-left: 30%;
        margin-right: 30%;
        margin-top: 20px;
        border: solid;
        border-width: 1px;
        border-color: #000;
        font-weight: bold;
    }

    .form-group {
        margin: 20px 20px 20px 20px;
        text-align: left;
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
        color: #D48E00;
    }

    input,
    textarea,
    select {
        width: 100%;
        padding: 10px;
        border: 2px solid #D48E00;
        border-radius: 5px;
        color: #333;
    }

    button {
        background-color: #FEA116;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
    }

        button:hover {
            background-color: #333;
        }
</style>
